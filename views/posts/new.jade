extends ../layout

block content
  .container
    h1 설문작성
      form(action = "/posts", method='POST')
        .form-group
          label(for='title') 제목
          input.form-control(type='text', id='title', name='title', placeholder='title')
        .form-group
          label(for='content') 내용
          textarea.form-control(id='content', rows='3', name='content', placeholder='content here')
        hr 
        button.btn.btn-primary(type='submit') 설문작성 
        .form-action
        a.btn.btn-default(href='javascript:window.history.back();') 뒤로 
        |&nbsp
    
